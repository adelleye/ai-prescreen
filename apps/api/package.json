  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@shared/core": "workspace:*",
    "dotenv": "^17.2.3",
    "fastify": "^4.27.2",
    "jose": "^5.9.6",
    "pdf-lib": "^1.17.1",
    "pg": "^8.13.1",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vercel/node": "^3.2.25",
    "eslint": "8.57.0",
    "pino-pretty": "^11.3.0",
    "prettier": "3.3.3",
    "tsx": "^4.19.1",
    "typescript": "5.9.3",
    "vitest": "^2.1.3"
